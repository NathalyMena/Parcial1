<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Nuevo Recordatorio"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="Importancia"
        android:textColor="#575555"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/posYt"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:hint="Y"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/posXt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/recordatorio"
        android:layout_width="347dp"
        android:layout_height="98dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Escribe aqui tu recordatorio"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posicion en el Mural"
        android:textColor="#575555"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="254dp" />

    <Button
        android:id="@+id/verdeBtn"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/verde_btn"
        android:backgroundTint="#369536"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/amarilloBtn"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/amarillo_btn"
        android:backgroundTint="@android:color/holo_orange_light"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintEnd_toStartOf="@+id/rojoBtn"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/verdeBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rojoBtn"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rojo_btn"
        android:backgroundTint="@color/design_default_color_error"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:text="Recordatorio"
        android:textColor="#575555"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/posXt"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="X"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/confirmarBtn"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#009688"
        android:fontFamily="monospace"
        android:text="Confirmar"
        app:cornerRadius="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/vistaBtn"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#009688"
        android:fontFamily="monospace"
        android:text="Vista"
        app:cornerRadius="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>